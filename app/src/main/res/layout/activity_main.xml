<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFD1D1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:background="#FFF5E4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="right"
        android:hint="0"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="70dp"
       />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/DEL"
            android:layout_margin="3dp"
            android:background="@drawable/buttonline"
            android:text="DEL"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:onClick="delete"
            />


        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/C"
            android:text="CLR"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/buttonline"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:onClick="clear"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/div"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:layout_weight="1"
            android:onClick="operator"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:textColor="@color/black"
            android:id="@+id/one"
            android:text="1"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:layout_weight="1"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/two"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:text="2"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/three"
            android:text="3"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/mult"
            android:text="*"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:textColor="@color/black"
            android:onClick="operator"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/four"
            android:text="4"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/five"
            android:text="5"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/six"
            android:layout_margin="3dp"
            android:text="6"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:textColor="@color/black"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/plus"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:text="+"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:onClick="onDigit"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/seven"
            android:textSize="20dp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:text="7"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/eight"
            android:text="8"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:textColor="@color/black"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/nine"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:text="9"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/dec"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:text="-"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:onClick="operator"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/result"
            android:text="RESULT"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:layout_weight="2"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6"
            android:textColor="@color/black"
            android:onClick="Equal"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/ZERO"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:text="0"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="3dp"
            android:id="@+id/com"
            android:text="."
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/buttonline"
            android:textColor="@color/black"
            android:onClick="decimal"
            />

    </LinearLayout>
</LinearLayout>